                  <option value="{{{this.code}}}-4">4</option>
                  <option value="{{{this.code}}}-5">5</option>
                  <option value="{{{this.code}}}-6">6</option>
                  <option value="{{{this.code}}}-7">7</option>
                  <option value="{{{this.code}}}-8">8</option>
                  <option value="{{{this.code}}}-9">9</option>
                  <option value="{{{this.code}}}-10">10</option>
                </select>
              </td>
            </tr>
          {{/each}}
        </table>
      </div>
    </div>
    <div class="row drinks">
      <div class="col">
        <h3>Drinks</h3>
        <table>
          {{#each drinks}}
            <tr>
              <td class="table-name">{{{this.name}}}</td>
              <td class="table-price">£{{{this.price}}}</td>
              <td class="quantity-picker">
                <select>
                  <option value="{{{this.code}}}-0">0</option>
