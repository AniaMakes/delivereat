<!DOCTYPE html>

<html>
<head>
  <!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link href="./static/main.css" rel="stylesheet">
</head>
<body>
  <h2>Welcome to OmNomBox</h2>
  <button class="btn" id="place-order">Ready to order? Click here to make your selection</button>
  <div class="container">
    <form id="orderForm">
    <div class="row starters">
      <div class="col">
        <h3>Starters</h3>
        <table>
          {{#each starters}}
            <tr>
              <td class="table-name">{{{this.name}}}</td>
              <td class="table-price">£{{{this.price}}}</td>
              <td class="quantity-picker">
                <select>
                  <option value="{{{this.code}}}-0">0</option>
                  <option value="{{{this.code}}}-1">1</option>
                  <option value="{{{this.code}}}-2">2</option>
                  <option value="{{{this.code}}}-3">3</option>
                  <option value="{{{this.code}}}-4">4</option>
                  <option value="{{{this.code}}}-5">5</option>
                  <option value="{{{this.code}}}-6">6</option>
                  <option value="{{{this.code}}}-7">7</option>
                  <option value="{{{this.code}}}-8">8</option>
                  <option value="{{{this.code}}}-9">9</option>
                  <option value="{{{this.code}}}-10">10</option>
                </select>
              </td>
            </tr>
          {{/each}}
        </table>
      </div>
    </div>
    <div class="row mains">
      <div class="col">
        <h3>Mains</h3>
        <table>
          {{#each mains}}
            <tr>
              <td class="table-name">{{{this.name}}}</td>
              <td class="table-price">£{{{this.price}}}</td>
